language: python
python:
  - "3.8"
  - "3.9"
  - "3.10"
  - "3.11"
env:
  - DJANGO_SETTINGS_MODULE=mysite.settings
install:
  - pip install -r requirements.txt
deploy:
  provider: elasticbeanstalk
  access_key_id:
    secure: "Encrypted <access-key-id>="
  secret_access_key:
    secure: "Encypted <secret-access-key>="
  region: "us-east-1"
  app: "mysite-polls-app-dev"
  env: "mysite-polls-app-dev-env"
on:
  branch: main